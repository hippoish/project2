<%= form_for [Carpool.new] do |f| %>

  <div class="field">
    <%= f.label 'Carpool Name' %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.hidden_field :neighborhood_id, :value => @neighborhood.id %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>

<% end %>
